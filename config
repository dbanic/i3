# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ccaron resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Up resize grow height 10 px or 10 ppt
        bindsym Down resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
#status_command ~/.i3/measure-net-speed.bash
#status_command  ~/.i3/conky-i3bar
        status_command i3status -c ~/.config/i3/i3status.conf
        tray_output eDP1
}

# Setting background wallpaper with feh
exec --no-startup-id feh --bg-fill ~/Documents/Pictures/Wallpapers/Novi/wallhaven.jpg

# Correct handling of floating dialogs
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# Locked screen color set to black
set $Locker i3lock -c 000000 && sleep 1
#set $Locker i3lock -i /home/dbanic/Documents/Pictures/Wallpapers/Novi/wallhaven.png -p default -n -t && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Tab mode "$mode_system"

# The middle button over a titlebar kills the window
bindsym --release button2 kill

# The middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill

# The right mouse button toggles floating
bindsym button3 floating toggle
bindsym $mod+button3 floating toggle

# Take a screenshot upon pressing $mod+PrintScreen (select an area) or PrintScreen (window) -- kod date _moraju_ ići kosi navodnici (da se izvrši)
bindsym --release $mod+Print exec --no-startup-id import /home/dbanic/Documents/Pictures/screenshots/$(date +%Y-%m-%d_%H:%M:%S).png && sleep 1 && notify-send -t 2000 "Screenshot saved"
bindsym --release Print exec --no-startup-id import -window root /home/dbanic/Documents/Pictures/screenshots/$(date +%Y-%m-%d_%H:%M:%S).png && sleep 1 && notify-send -t 2000 "Screenshot saved"

